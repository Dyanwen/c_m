    wx:if="{{spage==1||epage==1}}">
    <image class="model_img" src="../../images/main_s.png"></image>
    <view class="main_title">诚挚邀请</view>
    <view class="main_entil">INVITATION</view>
    <view class="invite_title">{{info.invite.title}}</view>
    <view class="invite_text"><text>{{info.invite.text}}</text></view>
    <view class="invite_img">
      <image mode="aspectFit" src="../../images/love.png"></image>
    </view>

